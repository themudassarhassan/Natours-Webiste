extends base

block content
    main.main
        .login-form
            h2.heading-secondary.ma-bt-lg Update Booking Information
            form.form.form--user-update
                input#id(type="hidden", name="id", value= booking.id)
                .form-group.ma-bt-md
                    label.form__label(for='tourName') Tour Name
                    input#tourName.form__input(type="name", name="tourName", value= booking.tour.name disabled)
                .form-group.ma-bt-md
                    label.form__label(for="price") Price
                    input#price.form__input(type="number", name="price", value= booking.price disabled)
                .form-group.ma-bt-md
                    label.form__label(for="userName") User Name
                    input#userName.form__input(type="name", name="userName", value= booking.user.name disabled)
                .form-group.ma-bt-md
                    label.form__label(for="bookingDate") Booking Date
                    input#bookingDate.form__input(type="date", name="bookkingDate", value= booking.createdAt.toISOString().split('T')[0] disabled)
                .form-group.ma-bt-md
                    label.form__label(for="paymentStatus") Payment Status
                    select#paymentStatus.form__input(name="role")
                        if booking.paid == true
                            option(value= `${true}`, selected="") Paid
                            option(value= `${false}`) Not Paid
                        else 
                            option(value= `${true}`) Paid
                            option(value= `${false}`, selected="") Not Paid
                .form__group
                    button.btn.btn--green.btn--user-update(type="submit") Update