block content 
    .container
      .table-wrapper
        .table-title
          .row
            .col-sm-6
              h2
                | Manage 
                b Reviews
            .col-sm-6
        table.table.table-striped.table-hover
          thead
            tr
              th Review
              th Rating
              th User Name
              th Tour Name
              th Date
              th Action
          tbody

            each review in reviews
                tr
                td= review.review
                td= review.rating
                td= review.user.name
                td= review.tour.name
                td= review.createdAt
                td
                    a.delete(id="deleteRecord"   href="#", data-toggle="modal")
